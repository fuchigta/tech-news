# API設定
HATENA_API_URL=https://b.hatena.ne.jp/entry/json/
REQUEST_TIMEOUT=10
MAX_RETRIES=3
BACKOFF_FACTOR=0.5

# フィード設定
ENTRY_EXPIRY_DAYS=30
MAX_ENTRIES_PER_FEED=100
FEED_REFRESH_INTERVAL=3600

# ストレージ設定
PUBLIC_DIR=public
FEED_CONFIG_FILE=feed.json
OUTPUT_FILE=result.parquet
CACHE_DIR=cache

# ロギング設定
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
# LOG_FILE=app.log  # コメントを外してログファイルを有効化